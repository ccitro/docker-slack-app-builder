{
  "main": "./dist/src/main.js",
  "engines": {
    "node": "10.x",
    "npm": "6.x"
  },
  "dependencies": {
    "@slack/client": "^4.2.2",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.2",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "fast-levenshtein": "^2.0.6",
    "html-entities": "^1.2.0",
    "lodash": "^4.17.10",
    "minimist": "^1.2.0",
    "moment": "^2.22.1",
    "moment-timezone": "^0.5.21",
    "pretty-ms": "^3.1.0",
    "striptags": "^3.1.1",
    "tmp": "0.0.33",
    "uuid": "^3.2.1",
    "weighted": "^0.3.0",
    "xml2js": "^0.4.19"
  },
  "optionalDependencies": {
    "better-sqlite3": "^5.0.1",
    "puppeteer": "^1.4.0"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/src/main.js",
    "watch": "tsc -w",
    "build-latest": "./build-latest.sh",
    "build": "yarn run build-backend && yarn run build-frontend",
    "build-frontend": "tsc -p tsconfig-frontend.json && cp -rf src/public dist/ && find src/ -name '*.ejs' -exec cp --parents \\{\\} dist/ \\;",
    "build-backend": "tsc"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^5.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/cheerio": "^0.22.7",
    "@types/express": "^4.11.1",
    "@types/html-entities": "^1.2.16",
    "@types/jquery": "^3.3.2",
    "@types/lodash": "^4.14.109",
    "@types/minimist": "^1.2.0",
    "@types/moment-timezone": "^0.5.6",
    "@types/node": "^10.1.2",
    "@types/pretty-ms": "^3.0.0",
    "@types/puppeteer": "^1.3.2",
    "@types/tmp": "0.0.33",
    "@types/uuid": "^3.4.3",
    "@types/weighted": "0.0.5",
    "@types/xml2js": "^0.4.2",
    "prettier": "1.12.1",
    "typescript": "^2.8.3"
  }
}
